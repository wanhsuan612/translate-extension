{
  "manifest_version": 3,
  "name": "Auto Translate Selection (zh-TWâ†”JP)",
  "version": "1.1",
  "description": "Right-click to translate selected text between Traditional Chinese and Japanese using Gemini.",
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/icon-128.png"
  }
}
